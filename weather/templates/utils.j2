{% macro content_box(title, centered = False) -%}
    <div class="content-box {% if centered %}centered{% endif %}">

        <div class="content-box-header {% if centered %}centered{% endif %}">
            <h1>{{ title }}</h1>
        </div>

        <div class="content-box-body {% if centered %}centered{% endif %}">
            {{ caller() }}
        </div>
    </div>
{% endmacro %}
